<UserControl x:Class="PortLog.Views.DashboardCaptainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#1565C0" Padding="30" Grid.Row="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="⚓ PortLog" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="White" Margin="0,0,0,5"/>
                <TextBlock Text="Captain Dashboard" 
                          FontSize="20" 
                          Foreground="#E3F2FD" Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,40">
                <!-- Welcome Card -->
                <Border Background="White" CornerRadius="15" Padding="35" Margin="0,0,0,30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.15"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding WelcomeMessage}" 
                                  FontSize="26" FontWeight="Bold" 
                                  Foreground="#1565C0" Margin="0,0,0,15"/>
                        <TextBlock Text="{Binding CompanyInfo}" 
                                  FontSize="18" Foreground="#666666" Margin="0,0,0,12"/>
                        <Border Background="#E3F2FD" CornerRadius="8" Padding="15,12" 
                               HorizontalAlignment="Left" Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚢" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding CaptainShipCount, StringFormat='You manage {0} ship(s)'}"
                                          FontSize="16" FontWeight="SemiBold" 
                                          Foreground="#1565C0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Info Cards -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Vessel Information Card -->
                    <Border Background="White" CornerRadius="15" Padding="30" 
                           Margin="0,0,15,0" Grid.Column="0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Background="#E3F2FD" CornerRadius="50" 
                                   Width="60" Height="60" Margin="0,0,0,20">
                                <TextBlock Text="📋" FontSize="30" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Vessel Information" 
                                      FontSize="20" FontWeight="Bold" 
                                      Foreground="#1565C0" Margin="0,0,0,12"/>
                            <TextBlock Text="View detailed information about your assigned vessels and their current status." 
                                      TextWrapping="Wrap" FontSize="15" 
                                      Foreground="#666666" LineHeight="22"/>
                        </StackPanel>
                    </Border>

                    <!-- Port Logs Card -->
                    <Border Background="White" CornerRadius="15" Padding="30" 
                           Margin="15,0,0,0" Grid.Column="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Background="#FFF3E0" CornerRadius="50" 
                                   Width="60" Height="60" Margin="0,0,0,20">
                                <TextBlock Text="📍" FontSize="30" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Port Logs" 
                                      FontSize="20" FontWeight="Bold" 
                                      Foreground="#F57C00" Margin="0,0,0,12"/>
                            <TextBlock Text="Access complete logs of port activities and voyage records for monitoring purposes." 
                                      TextWrapping="Wrap" FontSize="15" 
                                      Foreground="#666666" LineHeight="22"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Access Notice -->
                <Border Background="#E3F2FD" 
                       CornerRadius="15" Padding="25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#1565C0" CornerRadius="50" 
                               Width="50" Height="50" Grid.Column="0" 
                               Margin="0,0,20,0">
                            <TextBlock Text="ℹ" FontSize="28" 
                                      Foreground="White"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Captain View Access" 
                                      FontSize="18" FontWeight="Bold" 
                                      Foreground="#1565C0" Margin="0,0,0,6"/>
                            <TextBlock Text="You have read-only Company information and Ships. For updates or modifications, please contact your company manager." 
                                      TextWrapping="Wrap" FontSize="15" 
                                      Foreground="#0D47A1" LineHeight="20"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>