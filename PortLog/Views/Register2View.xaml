<UserControl x:Class="PortLog.Views.Register2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#94A3B8"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Outline Button Style -->
        <Style x:Key="OutlineButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2563EB"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="BorderBrush" Value="#CBD5E1"/>
                    <Setter Property="Foreground" Value="#94A3B8"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Input TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="CompanyListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,8">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#DBEAFE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8FAFC">
        <!-- Main Content -->
        <Grid MaxWidth="600" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32" Width="500">
                <TextBlock Text="Bergabung dengan Perusahaan" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#0F172A"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Langkah 2 dari 3: Pilih atau Buat Perusahaan" 
                          FontSize="14" 
                          Foreground="#64748B"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Form Card -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="40"
                    Style="{DynamicResource CardShadow}">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                        Opacity="0.08" 
                        ShadowDepth="2" 
                        BlurRadius="16"/>
                    </Border.Effect>

                <StackPanel>
                    <!-- Search Section -->
                    <TextBlock Text="Cari Perusahaan dengan Kode Join" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="#0F172A"
                              Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Style="{StaticResource ModernTextBox}"
                                Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                Tag="Masukkan kode join (8 karakter)"/>

                        <Button Grid.Column="2"
                               Content="Cari"
                               Style="{StaticResource ModernButton}"
                               Command="{Binding SearchCommand}"
                               Padding="32,0"/>
                    </Grid>

                    <!-- Message -->
                    <Border Background="#EFF6FF" 
                           BorderBrush="#3B82F6" 
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="12"
                           Margin="0,0,0,20"
                           Visibility="{Binding Message, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding Message}" 
                                  Foreground="#1E40AF" 
                                  FontSize="13"
                                  TextWrapping="Wrap"/>
                    </Border>

                    <!-- Search Results -->
                    <Border BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           MaxHeight="250"
                           Margin="0,0,0,20"
                           Visibility="{Binding SearchResults, Converter={StaticResource CollectionToVisibilityConverter}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListBox ItemsSource="{Binding SearchResults}"
                                    SelectedItem="{Binding SelectedCompany}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemContainerStyle="{StaticResource CompanyListBoxItem}"
                                    Padding="8">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="16" 
                                                      FontWeight="SemiBold"
                                                      Foreground="#0F172A"/>
                                            <TextBlock Text="{Binding Address}" 
                                                      FontSize="13" 
                                                      Foreground="#64748B"
                                                      Margin="0,4,0,0"
                                                      TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                <Border Background="#DBEAFE"
                                                       CornerRadius="4"
                                                       Padding="8,4">
                                                    <TextBlock FontSize="12" Foreground="#1E40AF">
                                                        <Run Text="Kode: "/>
                                                        <Run Text="{Binding JoinCode}" FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Border>

                    <!-- Action Buttons -->
                    <UniformGrid Columns="2" Rows="1" HorizontalAlignment="Stretch" Margin="0,0,0,16">
                        <Button Content="Bergabung"
                               Style="{StaticResource ModernButton}"
                               Command="{Binding JoinCompanyCommand}"
                               Margin="0,0,6,0"/>

                        <Button Content="Buat Perusahaan Baru"
                               Style="{StaticResource OutlineButton}"
                               Command="{Binding CreateCompanyCommand}"
                               Margin="6,0,0,0"
                               Visibility="{Binding CanCreateCompany, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>