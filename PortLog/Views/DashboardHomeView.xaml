<UserControl x:Class="PortLog.Views.DashboardHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================== TOP CARDS ================== -->
        <Grid Grid.Row="0" Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- CARD 1 -->
            <Border Background="#C9EEFF"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0 0 20 0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.22"/>
                </Border.Effect>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="60" Height="60" Background="#E0E0E0" CornerRadius="10"/>

                    <StackPanel Margin="15 0">
                        <TextBlock Text="{Binding CurrentSailingShips}"
                                   FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="Current sailing ships"
                                   FontSize="15" FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- CARD 2 -->
            <Border Grid.Column="1"
                    Background="#FFF3C4"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,0,20,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.22"/>
                </Border.Effect>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="60" Height="60" Background="#E0E0E0" CornerRadius="10"/>

                    <StackPanel Margin="15 0">
                        <TextBlock Text="{Binding WeeklyRevenueDisplay}"
                                   FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="This week's revenue"
                                   FontSize="15" FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- CARD 3 -->
            <Border Grid.Column="2"
                    Background="#C9FFE2"
                    CornerRadius="15"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.22"/>
                </Border.Effect>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="60" Height="60" Background="#E0E0E0" CornerRadius="10"/>

                    <StackPanel Margin="15 0">
                        <TextBlock Text="{Binding WeeklyVoyages}"
                                   FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="This week's voyages"
                                   FontSize="15" FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>


        <!-- ================== MAIN GRID ================== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <!-- SUMMARY -->
            <Border Grid.Row="0"
                    Grid.Column="0"
                    Background="#F5F9F9"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,0,20,10"
                    Grid.RowSpan="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="1" Opacity="0.15"/>
                </Border.Effect>

                <TextBlock Text="Summary"
                           FontSize="26"
                           FontWeight="Bold"/>
            </Border>


            <!-- ================== FLEET PREVIEW ================== -->
            <Border Grid.Row="0"
                    Grid.Column="1"
                    Background="#F5F9F9"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0 0 0 20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.22"/>
                </Border.Effect>

                <StackPanel>

                    <TextBlock Text="Fleet"
                               FontSize="26"
                               FontWeight="Bold"
                               Margin="0 0 0 10"/>

                    <ItemsControl ItemsSource="{Binding FleetPreview}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0 5 0 5" Padding="8" Background="#FFFFFF" CornerRadius="8">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.25"/>
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   FontSize="16"
                                                   Grid.Column="0"/>

                                        <TextBlock Text="{Binding Status}"
                                                   Grid.Column="1"
                                                   FontSize="16"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Border>


            <!-- ================== LATEST VOYAGES ================== -->
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Background="#F5F9F9"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0 0 0 10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.22"/>
                </Border.Effect>

                <StackPanel>

                    <TextBlock Text="Latest voyage"
                               FontSize="26"
                               FontWeight="Bold"
                               Margin="0 0 0 10"/>

                    <ItemsControl ItemsSource="{Binding LatestVoyages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0 5 0 5" Padding="8" Background="#FFFFFF" CornerRadius="8">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.25"/>
                                    </Border.Effect>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Route}"
                                                   Width="180"
                                                   FontWeight="SemiBold"/>

                                        <TextBlock Text="{Binding Date}"
                                                   Width="120"/>

                                        <TextBlock Text="{Binding RevenueFormatted}"
                                                   Width="120"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Border>

        </Grid>

    </Grid>
</UserControl>
