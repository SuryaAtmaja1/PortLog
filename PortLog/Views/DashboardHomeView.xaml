<UserControl x:Class="PortLog.Views.DashboardHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="20" 
                          ShadowDepth="3" 
                          Opacity="0.15" 
                          Color="#000000"/>

        <DropShadowEffect x:Key="LightShadow" 
                          BlurRadius="15" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          Color="#000000"/>
    </UserControl.Resources>

    <Grid Margin="40" Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ====== HEADER ====== -->
        <StackPanel Margin="0 0 0 30">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="📊" FontSize="36" VerticalAlignment="Center" Margin="0 0 15 0"/>
                <TextBlock Text="Dashboard" 
                           FontWeight="Bold"
                           FontFamily="Plus Jakarta Sans"
                           FontSize="32"
                           VerticalAlignment="Center"
                           Foreground="#1A1A1A"/>
            </StackPanel>
            <TextBlock Text="Overview of your fleet operations" 
                       FontSize="14"
                       Foreground="#666666"
                       Margin="51 0 0 0"/>
        </StackPanel>

        <!-- ====== TOP METRIC CARDS ====== -->
        <Grid Grid.Row="1" Margin="0 0 0 30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- CARD 1: Sailing Ships -->
            <Border Background="White"
                    CornerRadius="16"
                    Padding="25"
                    Margin="0 0 15 0"
                    Effect="{StaticResource CardShadow}">
                <Border BorderBrush="#0081A7" BorderThickness="0 0 0 4" CornerRadius="0 0 2 2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                            <Border Width="50" Height="50" 
                                    Background="#E3F2FD" 
                                    CornerRadius="12"
                                    Padding="10">
                                <TextBlock Text="⛵" 
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="15 0 0 0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentSailingShips}"
                                           FontSize="32" 
                                           FontWeight="Bold"
                                           Foreground="#0081A7"/>
                                <TextBlock Text="SHIPS" 
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#999999"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="Currently Sailing"
                                   FontSize="14" 
                                   Foreground="#666666"/>
                    </StackPanel>
                </Border>
            </Border>

            <!-- CARD 2: Weekly Revenue -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="16"
                    Padding="25"
                    Margin="0 0 15 0"
                    Effect="{StaticResource CardShadow}">
                <Border BorderBrush="#FDB833" BorderThickness="0 0 0 4" CornerRadius="0 0 2 2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                            <Border Width="50" Height="50" 
                                    Background="#FFF9E6" 
                                    CornerRadius="12"
                                    Padding="10">
                                <TextBlock Text="💰" 
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="15 0 0 0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding WeeklyRevenueDisplay}"
                                           FontSize="28" 
                                           FontWeight="Bold"
                                           Foreground="#FDB833"/>
                                <TextBlock Text="IDR" 
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#999999"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="This Week's Revenue"
                                   FontSize="14" 
                                   Foreground="#666666"/>
                    </StackPanel>
                </Border>
            </Border>

            <!-- CARD 3: Weekly Voyages -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="16"
                    Padding="25"
                    Effect="{StaticResource CardShadow}">
                <Border BorderBrush="#00B894" BorderThickness="0 0 0 4" CornerRadius="0 0 2 2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                            <Border Width="50" Height="50" 
                                    Background="#E8F8F5" 
                                    CornerRadius="12"
                                    Padding="10">
                                <TextBlock Text="🗺️" 
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="15 0 0 0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding WeeklyVoyages}"
                                           FontSize="32" 
                                           FontWeight="Bold"
                                           Foreground="#00B894"/>
                                <TextBlock Text="VOYAGES" 
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#999999"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="This Week's Trips"
                                   FontSize="14" 
                                   Foreground="#666666"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>

        <!-- ====== MAIN CONTENT GRID ====== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ====== SUMMARY SECTION ====== -->
            <Border Grid.Row="0"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Background="White"
                    CornerRadius="16"
                    Padding="25"
                    Margin="0 0 20 0"
                    Effect="{StaticResource CardShadow}">
                <StackPanel Margin="0 0 0 10">

                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="📈" FontSize="20" Margin="0 0 12 0" VerticalAlignment="Center"/>
                        <TextBlock Text="Summary (Last 7 Days)"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#1A1A1A"
                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Rows of cards -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <!-- Total Trips -->
                        <Border Grid.Row="0" Grid.Column="0"
                Background="#F8F9FA"
                CornerRadius="12"
                Padding="20"
                Margin="0 10 10 10"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="🚢 Total Trips"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                                <TextBlock Text="{Binding SummaryInsight.TotalTrips}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"/>
                            </StackPanel>
                        </Border>


                        <!-- Total Hours -->
                        <Border Grid.Row="0" Grid.Column="1"
                Background="#F8F9FA"
                CornerRadius="12"
                Padding="20"
                Margin="10 10 0 10"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="⏱ Total Hours"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                                <TextBlock Text="{Binding SummaryInsight.TotalHours}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"/>
                            </StackPanel>
                        </Border>


                        <!-- Total Distance -->
                        <Border Grid.Row="1" Grid.Column="0"
                Background="#F8F9FA"
                CornerRadius="12"
                Padding="20"
                Margin="0 10 10 10"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="📍 Distance Traveled (NM)"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                                <TextBlock Text="{Binding SummaryInsight.TotalDistance}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"/>
                            </StackPanel>
                        </Border>


                        <!-- Average Speed -->
                        <Border Grid.Row="1" Grid.Column="1"
                Background="#F8F9FA"
                CornerRadius="12"
                Padding="20"
                Margin="10 10 0 10"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="⚡ Avg Speed (knots)"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                                <TextBlock Text="{Binding SummaryInsight.AverageSpeed}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"/>
                            </StackPanel>
                        </Border>


                        <!-- Avg Fuel -->
                        <Border Grid.Row="2" Grid.Column="0"
                Background="#F8F9FA"
                CornerRadius="12"
                Padding="20"
                Margin="0 10 10 0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="⛽ Avg Fuel Consumption"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                                <TextBlock Text="{Binding SummaryInsight.AverageFuelConsumption}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"/>
                            </StackPanel>
                        </Border>


                        <!-- Date Range -->
                        <Border Grid.Row="2" Grid.Column="1"
                                Background="#F8F9FA"
                                CornerRadius="12"
                                Padding="20"
                                Margin="10 10 0 0"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="📆 Date Range"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                                <TextBlock Text="{Binding SummaryInsight.StartDate, StringFormat='{}{0:dd MMM}'}"
                           FontSize="16"
                           Foreground="#1A1A1A"/>

                                <TextBlock Text="{Binding SummaryInsight.EndDate, StringFormat='→ {0:dd MMM yyyy}'}"
                           FontSize="16"
                           Foreground="#1A1A1A"/>
                            </StackPanel>
                        </Border>

                    </Grid>

                </StackPanel>

            </Border>

            <!-- ====== FLEET PREVIEW ====== -->
            <Border Grid.Row="0"
                    Grid.Column="1"
                    Background="White"
                    CornerRadius="16"
                    Padding="25"
                    Margin="0 0 0 20"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                        <TextBlock Text="⛴️" FontSize="22" Margin="0 0 10 0" VerticalAlignment="Center"/>
                        <TextBlock Text="Fleet Status"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#1A1A1A"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                        <ItemsControl ItemsSource="{Binding FleetPreview}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0 0 0 12" 
                                            Padding="15" 
                                            Background="#F8F9FA" 
                                            CornerRadius="10"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <TextBlock Text="🚢" FontSize="16" Margin="0 0 8 0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           FontSize="14"
                                                           Foreground="#1A1A1A"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <Border Grid.Column="1" 
                                                    CornerRadius="8"
                                                    Padding="8 4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Active">
                                                                <Setter Property="Background" Value="#D4EDDA"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Docked">
                                                                <Setter Property="Background" Value="#FFF3CD"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Maintenance">
                                                                <Setter Property="Background" Value="#F8D7DA"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Status}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Active">
                                                                    <Setter Property="Foreground" Value="#155724"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Docked">
                                                                    <Setter Property="Foreground" Value="#856404"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Maintenance">
                                                                    <Setter Property="Foreground" Value="#721C24"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- ====== LATEST VOYAGES ====== -->
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Background="White"
                    CornerRadius="16"
                    Padding="25"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                        <TextBlock Text="🚢" FontSize="22" Margin="0 0 10 0" VerticalAlignment="Center"/>
                        <TextBlock Text="Latest Voyages"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#1A1A1A"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                        <ItemsControl ItemsSource="{Binding LatestVoyages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0 0 0 12" 
                                            Padding="15" 
                                            Background="#F8F9FA" 
                                            CornerRadius="10"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Route}"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"
                                                       Foreground="#1A1A1A"
                                                       Margin="0 0 0 8"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Date}"
                                                           FontSize="12"
                                                           Foreground="#666666"
                                                           VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding RevenueFormatted}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="#00B894"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>