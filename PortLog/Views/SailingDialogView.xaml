<Window x:Class="PortLog.Views.StartSailingDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Sailing" Height="320" Width="520" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="#FAFBFC">
    <Grid Margin="18">
        <Border Background="White" CornerRadius="10" Padding="18" >
            <StackPanel>
                <TextBlock Text="Start Sailing" FontSize="20" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Ship:" Width="110" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ShipName}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Departure Port:" Width="110" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding DeparturePort, UpdateSourceTrigger=PropertyChanged}" Width="320"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Departure Date:" Width="110" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding DepartureDate}" Width="180"/>
                    <TextBox Text="{Binding DepartureTimeText}" Width="110" Margin="8,0,0,0"
                             ToolTip="HH:mm (24h)"/>
                </StackPanel>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,6,0,0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                    <Button Content="Cancel" Width="90" Margin="0,0,8,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Start Sailing" Width="120"
                            Command="{Binding SaveCommand}" Background="#1976D2" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
