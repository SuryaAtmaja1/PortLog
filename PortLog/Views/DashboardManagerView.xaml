<UserControl x:Class="PortLog.Views.DashboardManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#007ACC" Padding="20" Grid.Row="0">
            <Grid>
                <TextBlock Text="Administrator Dashboard" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                <Button Content="Logout" 
                       Command="{Binding LogoutCommand}"
                       HorizontalAlignment="Right"
                       Background="#DC3545"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <Border Background="White" CornerRadius="10" Padding="30" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding WelcomeMessage}" 
                                  FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding CompanyInfo}" 
                                  FontSize="16" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Dashboard Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="10" Padding="20" 
                           Margin="0,0,10,0" Grid.Column="0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Manage Users" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="View and manage company users, assign roles, and control permissions." 
                                      TextWrapping="Wrap" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="20" 
                           Margin="10,0,0,0" Grid.Column="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Company Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="Configure company information, preferences, and administrative settings." 
                                      TextWrapping="Wrap" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="#E8F5E9" CornerRadius="10" Padding="20" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="✓ Administrator Privileges Active" 
                                  FontSize="16" FontWeight="SemiBold" Foreground="#2E7D32"/>
                        <TextBlock Text="You have full access to all company features and settings." 
                                  Foreground="#2E7D32" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>