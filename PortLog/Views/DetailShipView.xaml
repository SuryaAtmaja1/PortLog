<Window x:Class="PortLog.Views.DetailShipView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ship Detail"
        Height="650" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        SizeToContent="Height">
    <Window.Resources>
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="20" 
                          ShadowDepth="3" 
                          Opacity="0.15" 
                          Color="#000000"/>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0081A7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006d8f"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#DC3545"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC3545"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="16" 
            Margin="30"
            Padding="35"
            Effect="{StaticResource CardShadow}">
        <StackPanel>
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 30">
                <TextBlock Text="🚢" FontSize="42" VerticalAlignment="Center" Margin="0 0 15 0"/>
                <StackPanel>
                    <TextBlock Text="Ship Details"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1A1A1A"/>
                    <TextBlock Text="View and manage ship information" 
                               FontSize="13"
                               Foreground="#666666"
                               Margin="0 4 0 0"/>
                </StackPanel>
            </StackPanel>

            <!-- Form Fields -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- NAME -->
                <StackPanel Grid.Row="0" Margin="0 0 0 20">
                    <TextBlock Text="SHIP NAME" 
                               FontWeight="SemiBold" 
                               FontSize="11"
                               Foreground="#666666"
                               Margin="0 0 0 8"/>
                    <TextBlock Text="{Binding Name}" 
                               FontSize="16"
                               Foreground="#1A1A1A"
                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                    <TextBox Text="{Binding EditName}" 
                             Style="{StaticResource ModernTextBox}"
                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- TYPE -->
                <StackPanel Grid.Row="1" Margin="0 0 0 20">
                    <TextBlock Text="TYPE" 
                               FontWeight="SemiBold" 
                               FontSize="11"
                               Foreground="#666666"
                               Margin="0 0 0 8"/>
                    <TextBlock Text="{Binding Type}" 
                               FontSize="16"
                               Foreground="#1A1A1A"
                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                    <ComboBox ItemsSource="{Binding ShipTypes}"
                              SelectedItem="{Binding EditType}"
                              Style="{StaticResource ModernComboBox}"
                              Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- CAPACITY -->
                <StackPanel Grid.Row="2" Margin="0 0 0 20">
                    <TextBlock Text="CAPACITY" 
                               FontWeight="SemiBold" 
                               FontSize="11"
                               Foreground="#666666"
                               Margin="0 0 0 8"/>
                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                        <TextBlock Text="📦" FontSize="16" Margin="0 0 8 0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Capacity}" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#0081A7"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox Text="{Binding EditCapacity}" 
                             Style="{StaticResource ModernTextBox}"
                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- CAPTAIN -->
                <StackPanel Grid.Row="3" Margin="0 0 0 20">
                    <TextBlock Text="CAPTAIN" 
               FontWeight="SemiBold" 
               FontSize="11"
               Foreground="#666666"
               Margin="0 0 0 8"/>

                    <!-- READ MODE -->
                    <StackPanel Orientation="Horizontal"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                        <TextBlock Text="👤" FontSize="16" Margin="0 0 8 0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CaptainName}"
                   FontSize="16"
                   Foreground="#1A1A1A"
                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- EDIT MODE -->
                    <ComboBox ItemsSource="{Binding Captains}"
              SelectedItem="{Binding EditCaptain}"
              Style="{StaticResource ModernComboBox}"
              Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
              Margin="0 0 0 0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} ({1})">
                                            <Binding Path="Name"/>
                                            <Binding Path="Email"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>


                <!-- LAST VOYAGE -->
                <StackPanel Grid.Row="4" Margin="0 0 0 20">
                    <TextBlock Text="LAST VOYAGE" 
                               FontWeight="SemiBold" 
                               FontSize="11"
                               Foreground="#666666"
                               Margin="0 0 0 8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🗓️" FontSize="16" Margin="0 0 8 0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding LastVoyage}" 
                                   FontSize="16"
                                   Foreground="#1A1A1A"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Divider -->
            <Border Height="1" 
                    Background="#E0E0E0" 
                    Margin="0 10 0 25"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <!-- Edit Button -->
                <Button Content="Edit"
                        Style="{StaticResource PrimaryButton}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                        Width="90"
                        Margin="0 0 10 0"
                        Command="{Binding EditCommand}"/>

                <!-- Save Button -->
                <Button Content="Save"
                        Style="{StaticResource PrimaryButton}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                        Width="90"
                        Margin="0 0 10 0"
                        Command="{Binding SaveCommand}"/>

                <!-- Cancel Button -->
                <Button Content="Cancel"
                        Style="{StaticResource DangerButton}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                        Width="90"
                        Margin="0 0 10 0"
                        Command="{Binding CancelCommand}"/>

                <!-- Close Button -->
                <Button Content="Close"
                        Style="{StaticResource SecondaryButton}"
                        Width="90"
                        Click="Close_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>