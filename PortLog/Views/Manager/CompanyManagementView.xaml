<UserControl x:Class="PortLog.Views.CompanyManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>

        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="20"
                          ShadowDepth="3"
                          Opacity="0.15"
                          Color="#000000"/>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0081A7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#DC3545"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>


    <Grid Margin="40" Background="#F8F9FA">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0 0 0 30">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🏢" FontSize="36" Margin="0 0 15 0"/>
                <TextBlock Text="Company Management"
                           FontSize="32"
                           FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Text="Manage your company information and contacts"
                       FontSize="14"
                       Foreground="#666"
                       Margin="50 0 0 0"/>
        </StackPanel>


        <!-- ======================================= -->
        <!-- CONTENT GRID -->
        <!-- ======================================= -->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!-- ================================================= -->
            <!-- LEFT CARD: COMPANY INFO + CONTACT MANAGEMENT -->
            <!-- ================================================= -->
            <Border Background="White"
                    CornerRadius="16"
                    Padding="30"
                    Margin="0 0 20 0"
                    Effect="{StaticResource CardShadow}">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>


                        <!-- ================= COMPANY INFO SECTION ================= -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 25">
                            <TextBlock Text="ℹ️" FontSize="24" Margin="0 0 10 0"/>
                            <TextBlock Text="Company Information"
                                       FontSize="22"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- NAME -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="COMPANY NAME"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#666"/>

                            <TextBlock Text="{Binding Company.Name}"
                                       FontSize="16"
                                       Visibility="{Binding IsEditing,
                                           Converter={StaticResource BoolToVisibilityConverter},
                                           ConverterParameter=Invert}"/>

                            <TextBox Text="{Binding EditName}"
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="{Binding IsEditing,
                                           Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>


                        <!-- ADDRESS -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="ADDRESS"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#666"/>

                            <TextBlock Text="{Binding Company.Address}"
                                       FontSize="16"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding IsEditing,
                                           Converter={StaticResource BoolToVisibilityConverter},
                                           ConverterParameter=Invert}"/>

                            <TextBox Text="{Binding EditAddress}"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="80"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Visibility="{Binding IsEditing,
                                           Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>


                        <!-- PROVINCE -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="PROVINCE"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#666"/>

                            <TextBlock Text="{Binding Company.Provinsi}"
                                       FontSize="16"
                                       Visibility="{Binding IsEditing,
                                           Converter={StaticResource BoolToVisibilityConverter},
                                           ConverterParameter=Invert}"/>

                            <TextBox Text="{Binding EditProvinsi}"
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="{Binding IsEditing,
                                           Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- DIVIDER -->
                        <Border Height="1" Background="#E0E0E0" Margin="0 10 0 20"/>


                        <!-- EDIT INFO BUTTONS -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">

                                                    <Button Content="Edit Info"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="110"
                                    Margin="0 0 15 0"
                                    Command="{Binding EditInfoCommand}"
                                    Visibility="{Binding IsEditing,
                                        Converter={StaticResource BoolToVisibilityConverter},
                                        ConverterParameter=Invert}"/>

                                                    <Button Content="Save"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="100"
                                    Margin="0 0 10 0"
                                    Command="{Binding SaveInfoCommand}"
                                    Visibility="{Binding IsEditing,
                                        Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                    <Button Content="Cancel"
                                    Style="{StaticResource DangerButton}"
                                    Width="100"
                                    Command="{Binding CancelEditCommand}"
                                    Visibility="{Binding IsEditing,
                                        Converter={StaticResource BoolToVisibilityConverter}}"/>

                        </StackPanel>



                        <!-- ====================================== -->
                        <!-- CONTACT LIST SECTION  (FIXED VERSION) -->
                        <!-- ====================================== -->

                        <StackPanel Margin="0 20 0 15">

                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <TextBlock Text="📇" FontSize="22" Margin="0 0 10 0"/>
                                <TextBlock Text="Company Contacts"
                                           FontSize="20"
                                           FontWeight="Bold"/>
                            </StackPanel>


                            <!-- CONTACT LIST -->
                            <ItemsControl ItemsSource="{Binding Contacts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>

                                        <!-- CARD (NOT CLICKABLE) -->
                                        <Border Background="White"
        CornerRadius="12"
        Padding="15"
        Margin="0 0 0 12">

                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F2FBFF"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#0081A7"/>

                                                <StackPanel Orientation="Horizontal" Margin="0 6 0 0">
                                                    <TextBlock Text="📧" FontSize="14" Margin="0 0 6 0"/>
                                                    <TextBlock Text="{Binding Email}" FontSize="14"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📱" FontSize="14" Margin="0 0 6 0"/>
                                                    <TextBlock Text="{Binding Phone}" FontSize="14"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Right">
                                                    <Button Content="Edit"
                                                        Width="70"
                                                        Margin="0 0 10 0"
                                                        Style="{StaticResource SecondaryButton}"
                                                        Command="{Binding DataContext.StartEditContactCommand,
                                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>

                                                    <Button Content="Delete"
                                                            Width="80"
                                                            Style="{StaticResource DangerButton}"
                                                            Command="{Binding DataContext.DeleteContactCommand,
                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </StackPanel>

                                        </Border>

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>


                            <!-- ADD CONTACT -->
                            <Button Content="Add Contact"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="150"
                                    HorizontalAlignment="Right"
                                    Margin="0 10 15 0"
                                    Command="{Binding AddContactCommand}"
                                    Visibility="{Binding IsAddingContact,
                                        Converter={StaticResource BoolToVisibilityConverter},
                                        ConverterParameter=Invert}"/>

                        </StackPanel>



                        <!-- =============================== -->
                        <!-- ADD CONTACT FORM -->
                        <!-- =============================== -->
                        <Border Background="#F8F9FA"
                                CornerRadius="12"
                                Padding="20"
                                Margin="0 15 0 20"
                                Visibility="{Binding IsAddingContact,
                                    Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>

                                <TextBlock Text="Add New Contact"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#0081A7"
                                           Margin="0 0 0 15"/>

                                <TextBlock Text="Name" FontSize="12" Foreground="#666"/>
                                <TextBox Text="{Binding ContactName}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0 5 0 15"/>

                                <TextBlock Text="Email" FontSize="12" Foreground="#666"/>
                                <TextBox Text="{Binding ContactEmail}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0 5 0 15"/>

                                <TextBlock Text="Phone" FontSize="12" Foreground="#666"/>
                                <TextBox Text="{Binding ContactPhone}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0 5 0 25"/>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">

                                    <Button Content="Cancel"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="90"
                                            Margin="0 0 10 0"
                                            Command="{Binding CancelContactEditCommand}"/>

                                    <Button Content="Save"
                                            Style="{StaticResource PrimaryButton}"
                                            Width="100"
                                            Command="{Binding SaveContactCommand}"/>

                                </StackPanel>

                            </StackPanel>

                        </Border>




                        <!-- =============================== -->
                        <!-- EDIT CONTACT FORM -->
                        <!-- =============================== -->
                        <Border Background="#F8F9FA"
                                CornerRadius="12"
                                Padding="20"
                                Margin="0 15 0 20"
                                Visibility="{Binding IsEditingContact,
                                    Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>

                                <TextBlock Text="Edit Contact"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#0081A7"
                                           Margin="0 0 0 15"/>

                                <TextBlock Text="Name" FontSize="12" Foreground="#666"/>
                                <TextBox Text="{Binding ContactName}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0 5 0 15"/>

                                <TextBlock Text="Email" FontSize="12" Foreground="#666"/>
                                <TextBox Text="{Binding ContactEmail}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0 5 0 15"/>

                                <TextBlock Text="Phone" FontSize="12" Foreground="#666"/>
                                <TextBox Text="{Binding ContactPhone}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0 5 0 25"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                                    <Button Content="Cancel"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="90"
                                            Margin="0 0 10 0"
                                            Command="{Binding CancelContactEditCommand}"/>

                                    <Button Content="Save Changes"
                                            Style="{StaticResource PrimaryButton}"
                                            Width="130"
                                            Command="{Binding SaveContactCommand}"/>

                                </StackPanel>

                            </StackPanel>
                        </Border>

                        <!-- DIVIDER -->
                        <Border Height="1" Background="#E0E0E0" Margin="0 10 0 20"/>

                        <!-- JOIN CODE - WITH COPY BUTTON -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="JOIN CODE"
                                       FontWeight="SemiBold"
                                       FontSize="11"
                                       Foreground="#666"
                                       Margin="0 0 0 8"/>

                            <Border Background="#E3F2FD"
                                    CornerRadius="8"
                                    Padding="15 12"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand"
                                    ToolTip="Click to copy join code">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding CopyJoinCodeCommand}"/>
                                </Border.InputBindings>

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#BBDEFB"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔑" FontSize="16" Margin="0 0 10 0"/>
                                    <TextBlock Text="{Binding Company.JoinCode}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="#0081A7"/>
                                    <TextBlock Text="📋" 
                                               FontSize="16" 
                                               Margin="12 0 0 0"
                                               VerticalAlignment="Center"
                                               Foreground="#0081A7"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Click to copy to clipboard"
                                       FontSize="10"
                                       Foreground="#999"
                                       Margin="0 5 0 0"
                                       FontStyle="Italic"/>
                        </StackPanel>


       


                    </StackPanel>
                </ScrollViewer>
            </Border>




            <!-- ========================================= -->
            <!-- RIGHT SIDE — CREW OVERVIEW -->
            <!-- ========================================= -->
            <Border Background="White"
                    Grid.Column="1"
                    CornerRadius="16"
                    Padding="30"
                    Effect="{StaticResource CardShadow}">

                <StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 25">
                        <TextBlock Text="👥" FontSize="24" Margin="0 0 12 0"/>
                        <TextBlock Text="Crew Overview" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>

                    <Border Background="White"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#FDB833"
                            BorderThickness="0 0 0 4"
                            Margin="0 0 0 20">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="40" Background="#FFF9E6" Height="40" CornerRadius="10" Padding="8" Margin="0 0 12 0">
                                <TextBlock Text="👔" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="MANAGERS" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ManagerCount}" FontSize="28" FontWeight="Bold" Foreground="#FDB833"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>


                    <Border Background="White"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#0081A7"
                            BorderThickness="0 0 0 4"
                            Margin="0 0 0 20">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="40" Background="#E3F2FD" Height="40" CornerRadius="10" Padding="8" Margin="0 0 12 0">
                                <TextBlock Text="⚓" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CAPTAINS" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding CaptainCount}" FontSize="28" FontWeight="Bold" Foreground="#0081A7"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Button Content="Manage Crew"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch"
                            Command="{Binding ManageCrewCommand}"/>

                </StackPanel>
            </Border>

        </Grid>

    </Grid>

</UserControl>