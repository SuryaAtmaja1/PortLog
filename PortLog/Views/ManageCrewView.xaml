<Window x:Class="PortLog.Views.ManageCrewView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PortLog.Converters"
        Title="Manage Crew"
        Height="640"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FA"
        ResizeMode="NoResize">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="20"
                          ShadowDepth="3"
                          Opacity="0.15"
                          Color="#000000"/>

        <DropShadowEffect x:Key="LightShadow"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.1"
                          Color="#000000"/>

        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Button Styles (same as before) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0081A7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#00B894"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12 6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <!-- ===================== OUTER SCROLL ===================== -->
    <Border Background="White" CornerRadius="16" Margin="30" Padding="35" Effect="{StaticResource CardShadow}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>

                <!-- ========== HEADER ========== -->
                <StackPanel Margin="0 0 0 30">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="👥" FontSize="42" Margin="0 0 15 0"/>
                        <StackPanel>
                            <TextBlock Text="Crew Management"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#1A1A1A"/>
                            <TextBlock Text="Add, remove, and manage your crew members"
                                       FontSize="13"
                                       Foreground="#666"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- ========== CREW GRID (Managers + Captains) ========== -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- ===== MANAGERS ===== -->
                    <Border Background="#FFF9E6" CornerRadius="12" Padding="25" Effect="{StaticResource LightShadow}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                                <Border Width="40" Height="40" Background="#FDB833" CornerRadius="10" Padding="8">
                                    <TextBlock Text="👔" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Managers" FontSize="20" FontWeight="Bold" Margin="10 0 0 0"/>
                            </StackPanel>

                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Managers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" CornerRadius="10" Padding="15" Margin="0 0 0 12"
                                                    BorderBrush="#FFE5A3" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                                        <TextBlock Text="{Binding Email}" FontSize="12" Foreground="#666"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="1"
                                                            Content="Remove"
                                                            Padding="10 6"
                                                            Width="80"
                                                            Style="{StaticResource DangerButton}"
                                                            Command="{Binding DataContext.RemoveCrewCommand,
                                                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding Id}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- ===== CAPTAINS ===== -->
                    <Border Grid.Column="1" Background="#E3F2FD" CornerRadius="12" Padding="25" Margin="15 0 0 0" Effect="{StaticResource LightShadow}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                                <Border Width="40" Height="40" Background="#0081A7" CornerRadius="10" Padding="8">
                                    <TextBlock Text="⚓" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Captains" FontSize="20" FontWeight="Bold" Margin="10 0 0 0"/>
                            </StackPanel>

                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Captains}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" CornerRadius="10" Padding="15" Margin="0 0 0 12"
                                                    BorderBrush="#90CAF9" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                                        <TextBlock Text="{Binding Email}" FontSize="12" Foreground="#666"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="1"
                                                            Content="Remove"
                                                            Padding="10 6"
                                                            Width="80"
                                                            Style="{StaticResource DangerButton}"
                                                            Command="{Binding DataContext.RemoveCrewCommand,
                                                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding Id}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ========== ADD CREW SECTION ========== -->
                <StackPanel Margin="0 30 0 0">

                    <Border Height="1" Background="#E0E0E0" Margin="0 0 0 20"/>

                    <!-- Error Message -->
                    <Border Background="#FFE5E5"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0 0 0 15"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" FontSize="14" Margin="0 0 8 0"/>
                            <TextBlock Text="{Binding ErrorMessage}" Foreground="#C82333" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">

                            <!-- Select User -->
                            <StackPanel Margin="0 0 15 0">
                                <TextBlock Text="SELECT USER" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                <ComboBox Width="240" Height="38"
                                          ItemsSource="{Binding AvailableUsers}"
                                          SelectedItem="{Binding SelectedUser}"
                                          Style="{StaticResource ModernComboBox}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} ({1})">
                                                        <Binding Path="Name"/>
                                                        <Binding Path="Email"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Role -->
                            <StackPanel Margin="0 0 15 0">
                                <TextBlock Text="ROLE" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                <ComboBox ItemsSource="{Binding Roles}"
                                          SelectedItem="{Binding SelectedRole}"
                                          Width="140"
                                          Height="38"
                                          Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>

                            <!-- Add Button -->
                            <Button Content="Add Crew"
                                    Style="{StaticResource SuccessButton}"
                                    Width="120"
                                    Height="38"
                                    VerticalAlignment="Bottom"
                                    Command="{Binding AddCrewCommand}"/>
                        </StackPanel>

                        <!-- Close Button -->
                        <Button Grid.Column="1"
                                Content="Close"
                                Style="{StaticResource SecondaryButton}"
                                Width="100"
                                Height="38"
                                VerticalAlignment="Bottom"
                                Click="Close_Click"/>
                    </Grid>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
