<UserControl x:Class="PortLog.Views.CompanyManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="20"
                          ShadowDepth="3"
                          Opacity="0.15"
                          Color="#000000"/>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0081A7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006d8f"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#DC3545"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC3545"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40" Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ====== HEADER ====== -->
        <StackPanel Margin="0 0 0 30">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="🏢" FontSize="36" VerticalAlignment="Center" Margin="0 0 15 0"/>
                <TextBlock Text="Company Management" 
                           FontWeight="Bold"
                           FontFamily="Plus Jakarta Sans"
                           FontSize="32"
                           VerticalAlignment="Center"
                           Foreground="#1A1A1A"/>
            </StackPanel>
            <TextBlock Text="Manage your company information and crew" 
                       FontSize="14"
                       Foreground="#666666"
                       Margin="51 0 0 0"/>
        </StackPanel>

        <!-- ====== CONTENT GRID ====== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ====== LEFT CARD — COMPANY INFO ====== -->
            <Border Background="White"
                    CornerRadius="16"
                    Padding="30"
                    Margin="0 0 20 0"
                    Effect="{StaticResource CardShadow}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 25">
                            <TextBlock Text="ℹ️" FontSize="24" Margin="0 0 12 0" VerticalAlignment="Center"/>
                            <TextBlock Text="Company Information"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#1A1A1A"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Company Name -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="COMPANY NAME" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>
                            <TextBlock Text="{Binding Company.Name}"
                                       FontSize="16"
                                       Foreground="#1A1A1A"
                                       Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                            <TextBox Text="{Binding EditName}"
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="ADDRESS" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>
                            <TextBlock Text="{Binding Company.Address}"
                                       FontSize="16"
                                       Foreground="#1A1A1A"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <TextBox Text="{Binding EditAddress}"
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="80" />
                        </StackPanel>

                        <!-- Province -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="PROVINCE" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>
                            <TextBlock Text="{Binding Company.Provinsi}"
                                       FontSize="16"
                                       Foreground="#1A1A1A"
                                       Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <TextBox Text="{Binding EditProvinsi}"
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Email Contacts -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="EMAIL CONTACTS" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>
                            <ItemsControl ItemsSource="{Binding Contacts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" 
                                                CornerRadius="6"
                                                Padding="12 8"
                                                Margin="0 0 0 6">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📧" FontSize="14" Margin="0 0 8 0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Email}"
                                                           FontSize="14"
                                                           Foreground="#0081A7"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Phone Contacts -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="PHONE CONTACTS" 
                                       FontWeight="SemiBold"
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>
                            <ItemsControl ItemsSource="{Binding Contacts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" 
                                                CornerRadius="6"
                                                Padding="12 8"
                                                Margin="0 0 0 6">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📱" FontSize="14" Margin="0 0 8 0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Phone}"
                                                           FontSize="14"
                                                           Foreground="#1A1A1A"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Join Code -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="JOIN CODE"
                                       FontWeight="SemiBold"
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>
                            <Border Background="#E3F2FD"
                                    CornerRadius="8"
                                    Padding="15 12"
                                    HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔑" FontSize="16" Margin="0 0 10 0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Company.JoinCode}" 
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="#0081A7"
                                               VerticalAlignment="Center"
                                               />
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Divider -->
                        <Border Height="1" 
                                Background="#E0E0E0" 
                                Margin="0 10 0 25"/>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <!-- EDIT -->
                            <Button Content="Edit Info"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="110"
                                    Margin="0 0 10 0"
                                    Command="{Binding EditInfoCommand}"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>

                            <!-- SAVE -->
                            <Button Content="Save"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="100"
                                    Margin="0 0 10 0"
                                    Command="{Binding SaveInfoCommand}"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <!-- CANCEL -->
                            <Button Content="Cancel"
                                    Style="{StaticResource DangerButton}"
                                    Width="100"
                                    Command="{Binding CancelEditCommand}"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ====== RIGHT CARD — CREW ====== -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="16"
                    Padding="30"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 25">
                        <TextBlock Text="👥" FontSize="24" Margin="0 0 12 0" VerticalAlignment="Center"/>
                        <TextBlock Text="Crew Overview"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#1A1A1A"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Managers Card -->
                    <Border Background="White"
                            BorderBrush="#FDB833"
                            BorderThickness="0 0 0 4"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0 0 0 20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <Border Width="40" Height="40" 
                                        Background="#FFF9E6" 
                                        CornerRadius="10"
                                        Padding="8"
                                        Margin="0 0 12 0">
                                    <TextBlock Text="👔" 
                                               FontSize="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="MANAGERS"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               Foreground="#666666"
                                               Margin="0 0 0 2"/>
                                    <TextBlock Text="{Binding ManagerCount}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#FDB833"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Captains Card -->
                    <Border Background="White"
                            BorderBrush="#0081A7"
                            BorderThickness="0 0 0 4"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0 0 0 25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <Border Width="40" Height="40" 
                                        Background="#E3F2FD" 
                                        CornerRadius="10"
                                        Padding="8"
                                        Margin="0 0 12 0">
                                    <TextBlock Text="⚓" 
                                               FontSize="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="CAPTAINS"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               Foreground="#666666"
                                               Margin="0 0 0 2"/>
                                    <TextBlock Text="{Binding CaptainCount}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#0081A7"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Manage Crew Button -->
                    <Button Content="Manage Crew"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch"
                            Command="{Binding ManageCrewCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>