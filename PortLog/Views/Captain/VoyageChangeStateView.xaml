<UserControl x:Class="PortLog.Views.VoyageChangeStateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F8F9FA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">

                <!-- HEADER -->
                <Border Background="White" CornerRadius="15" Padding="30,25" Margin="0,0,0,30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel Orientation="Horizontal">
                        <Border Background="#E3F2FD" CornerRadius="50" Width="70" Height="70"
                                Margin="0,0,20,0" VerticalAlignment="Center">
                            <TextBlock Text="📡" FontSize="36"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Voyage Change State"
                                       FontSize="28" FontWeight="Bold"
                                       Foreground="#1565C0"/>
                            <TextBlock Text="Monitor and change operational status of ships"
                                       FontSize="15" Foreground="#666666" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>



                <!-- SAILING SHIPS -->
                <Border Background="White" CornerRadius="15" Padding="25" Margin="0,0,0,25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <Border Background="#E8F5E9" CornerRadius="10" Padding="15,12" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⛴️" FontSize="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Sailing Ships"
                                           FontSize="20" FontWeight="Bold" Foreground="#2E7D32"/>
                            </StackPanel>
                        </Border>

                        <DataGrid ItemsSource="{Binding SailingShips}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  RowHeight="50"
                                  FontSize="14"
                                  HeadersVisibility="Column"
                                  AlternatingRowBackground="#F8F9FA"
                                  GridLinesVisibility="None"
                                  BorderThickness="0">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="120"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                                <DataGridTextColumn Header="Captain" Binding="{Binding CaptainName}" Width="150"/>
                                <DataGridTextColumn Header="Last Voyage" Binding="{Binding LastVoyage}" Width="200"/>
                                <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="90"/>

                                <!-- ACTIONS -->
                                <DataGridTemplateColumn Header="Actions" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <!-- DETAIL -->
                                                <Button Content="Detail"
                                                        Command="{Binding DataContext.DetailCommand,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding ShipId}"
                                                        Background="#1976D2" Foreground="White"
                                                        Padding="12,6" BorderThickness="0"
                                                        Margin="0,0,8,0"/>

                                                <!-- CHANGE STATE -->
                                                <Button Content="Change State"
                                                        Command="{Binding DataContext.ChangeStateCommand,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding ShipId}"
                                                        Background="#7B1FA2" Foreground="White"
                                                        Padding="12,6" BorderThickness="0"/>

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>

                    </StackPanel>
                </Border>



                <!-- NOT SAILING SHIPS -->
                <Border Background="White" CornerRadius="15" Padding="25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <Border Background="#FFF3E0" CornerRadius="10" Padding="15,12" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚓" FontSize="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Not Sailing Ships"
                                           FontSize="20" FontWeight="Bold" Foreground="#E65100"/>
                            </StackPanel>
                        </Border>

                        <DataGrid ItemsSource="{Binding NotSailingShips}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  RowHeight="50"
                                  FontSize="14"
                                  HeadersVisibility="Column"
                                  AlternatingRowBackground="#F8F9FA"
                                  GridLinesVisibility="None"
                                  BorderThickness="0">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="120"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                                <DataGridTextColumn Header="Captain" Binding="{Binding CaptainName}" Width="150"/>
                                <DataGridTextColumn Header="Last Voyage" Binding="{Binding LastVoyage}" Width="200"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                                <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="90"/>

                                <!-- ACTIONS -->
                                <DataGridTemplateColumn Header="Actions" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                                                <!-- DETAIL -->
                                                <Button Content="Detail"
                                                        Command="{Binding DataContext.DetailCommand,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding ShipId}"
                                                        Background="#1976D2" Foreground="White"
                                                        Padding="12,6" BorderThickness="0"
                                                        Margin="0,0,8,0"/>

                                                <!-- CHANGE STATE -->
                                                <Button Content="Change State"
                                                        Command="{Binding DataContext.ChangeStateCommand,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding ShipId}"
                                                        Background="#7B1FA2" Foreground="White"
                                                        Padding="12,6" BorderThickness="0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>
