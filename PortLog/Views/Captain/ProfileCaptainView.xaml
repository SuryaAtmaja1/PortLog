<UserControl x:Class="PortLog.Views.ProfileCaptainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="20"
                          ShadowDepth="3"
                          Opacity="0.15"
                          Color="#000000"/>

        <DropShadowEffect x:Key="LightShadow"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.1"
                          Color="#000000"/>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0081A7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006d8f"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F8F9FA">
        <Grid Margin="40" MaxWidth="800">
            <StackPanel>
                <!-- ====== HEADER ====== -->
                <StackPanel Margin="0 0 0 30">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="🧑‍✈️" FontSize="36" VerticalAlignment="Center" Margin="0 0 15 0"/>
                        <TextBlock Text="Captain Profile" 
                                   FontWeight="Bold"
                                   FontFamily="Plus Jakarta Sans"
                                   FontSize="32"
                                   VerticalAlignment="Center"
                                   Foreground="#1A1A1A"/>
                    </StackPanel>
                    <TextBlock Text="Manage your personal information" 
                               FontSize="14"
                               Foreground="#666666"
                               Margin="51 0 0 0"/>
                </StackPanel>

                <!-- ====== PERSONAL INFO CARD ====== -->
                <Border Background="White"
                        CornerRadius="16"
                        Padding="30"
                        Margin="0 0 0 25"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 25">
                            <TextBlock Text="👤" FontSize="24" Margin="0 0 12 0" VerticalAlignment="Center"/>
                            <TextBlock Text="Personal Information"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#1A1A1A"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- NAME -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="FULL NAME" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>

                            <!-- VIEW MODE -->
                            <TextBlock Text="{Binding Name}"
                                       FontSize="16"
                                       Foreground="#1A1A1A"
                                       Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>

                            <!-- EDIT MODE -->
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- EMAIL -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="EMAIL ADDRESS" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>

                            <!-- VIEW MODE -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                <TextBlock Text="📧" FontSize="16" Margin="0 0 8 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Email}"
                                           FontSize="16"
                                           Foreground="#0081A7"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- EDIT MODE -->
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- CONTACT -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="PHONE NUMBER" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>

                            <!-- VIEW MODE -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                <TextBlock Text="📱" FontSize="16" Margin="0 0 8 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Contact}"
                                           FontSize="16"
                                           Foreground="#1A1A1A"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- EDIT MODE -->
                            <TextBox Text="{Binding Contact, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- ERROR MESSAGE -->
                        <Border Background="#FFE5E5"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0 0 0 15"
                                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="❌" FontSize="14" Margin="0 0 8 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ErrorMessage}"
                                           Foreground="#C82333"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- SUCCESS MESSAGE -->
                        <Border Background="#D4EDDA"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0 0 0 15"
                                Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✅" FontSize="14" Margin="0 0 8 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SuccessMessage}"
                                           Foreground="#155724"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Divider -->
                        <Border Height="1" 
                                Background="#E0E0E0" 
                                Margin="0 5 0 25"/>

                        <!-- BUTTONS -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">

                            <!-- EDIT BUTTON (VIEW MODE) -->
                            <Button Content="Edit Profile"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="130"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                    Command="{Binding EditCommand}"/>

                            <!-- SAVE BUTTON (EDIT MODE) -->
                            <Button Content="Save Changes"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="140"
                                    Margin="0 0 10 0"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Command="{Binding SaveCommand}"/>

                            <!-- CANCEL BUTTON (EDIT MODE) -->
                            <Button Content="Cancel"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="100"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Command="{Binding CancelCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ====== COMPANY INFO CARD ====== -->
                <Border Background="White"
                        CornerRadius="16"
                        Padding="30"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 25">
                            <TextBlock Text="🏢" FontSize="24" Margin="0 0 12 0" VerticalAlignment="Center"/>
                            <TextBlock Text="Company Information"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#1A1A1A"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Company Name -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="COMPANY NAME" 
                                       FontWeight="SemiBold"
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>
                            <TextBlock Text="{Binding CompanyName}"
                                       FontSize="16"
                                       Foreground="#1A1A1A"/>
                        </StackPanel>

                        <!-- Company Emails -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="COMPANY EMAILS"
               FontWeight="SemiBold"
               FontSize="11"
               Foreground="#666666"
               Margin="0 0 0 8"/>

                            <ItemsControl ItemsSource="{Binding CompanyEmails}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0 2 0 2">
                                            <TextBlock Text="📧" FontSize="16" Margin="0 0 8 0"/>
                                            <TextBlock Text="{Binding}" FontSize="16" Foreground="#0081A7"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Company Numbers -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="COMPANY PHONE NUMBERS"
               FontWeight="SemiBold"
               FontSize="11"
               Foreground="#666666"
               Margin="0 0 0 8"/>

                            <ItemsControl ItemsSource="{Binding CompanyNumbers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0 2 0 2">
                                            <TextBlock Text="📞" FontSize="16" Margin="0 0 8 0"/>
                                            <TextBlock Text="{Binding}" FontSize="16" Foreground="#1A1A1A"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>


                        <!-- Company Address -->
                        <StackPanel>
                            <TextBlock Text="COMPANY ADDRESS" 
                                       FontWeight="SemiBold"
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0 0 0 8"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📍" FontSize="16" Margin="0 0 8 0" VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding CompanyAddress}"
                                           FontSize="16"
                                           TextWrapping="Wrap"
                                           Foreground="#1A1A1A"
                                           VerticalAlignment="Top"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>

</UserControl>