<Window x:Class="PortLog.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PortLog.Views"
        xmlns:vm="clr-namespace:PortLog.ViewModels"
        xmlns:helpers="clr-namespace:PortLog.Helpers"
        mc:Ignorable="d"
        Title="PortLog" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:Register1ViewModel}">
            <views:Register1View/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:Register2ViewModel}">
            <views:Register2View/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:Register3ViewModel}">
            <views:Register3View/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardCaptainViewModel}">
            <views:DashboardCaptainView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel}"/>
</Window>
