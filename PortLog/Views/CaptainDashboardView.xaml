<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:help="clr-namespace:PortLog.Helpers"
             xmlns:vm="clr-namespace:PortLog.ViewModels" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="PortLog.Views.CaptainDashboardView"
             d:DesignWidth="218.741">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Background="#022C2E" Grid.Column="0">
            <StackPanel Margin="12">
                <!-- Logo / Role -->
                <TextBlock Text="PortLog - Captain"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="6 8"
                           FontFamily="Plus Jakarta Sans"/>

                <!-- NAV BUTTON: Overview -->
                <Button Content="Overview"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Overview"
                        Tag="Overview"
                        Style="{StaticResource NavButtonStyle}"
                        help:NavigationHelper.IsActive="{Binding SelectedMenu, ConverterParameter=Overview, Converter={StaticResource ActiveMenuConverter}}"/>

                <Separator Margin="0,12"/>

                <!-- Logout -->
                <Button Content="Logout"
                        Command="{Binding LogoutCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- CONTENT -->
        <Border Grid.Column="1" Background="#FBFCFD" Padding="12">
            <ContentControl Content="{Binding CurrentPage}" />
        </Border>
    </Grid>
</UserControl>