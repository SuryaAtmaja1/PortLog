<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:PortLog.Helpers">

    <Style x:Key="TextBox_1" TargetType="TextBox">
        <Setter Property="helpers:TextBoxHelper.Placeholder" Value="" />
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Margin" Value="0,12"/>
        <Setter Property="BorderBrush" Value="#000000"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="FontSize" Value="16"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border BorderThickness="0,0,0,1"
                            BorderBrush="{TemplateBinding BorderBrush}"/>

                        <ScrollViewer x:Name="PART_ContentHost"
                                  Background="{TemplateBinding Background}"/>

                        <!-- Placeholder -->
                        <TextBlock x:Name="Placeholder"
                               Text="{TemplateBinding Tag}"
                               FontStyle="Italic"
                               Foreground="#88000000"
                               Margin="4,-2,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Hide placeholder when text exists -->
                        <Trigger Property="helpers:TextBoxHelper.HasText" Value="True">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- Highlight border when focused -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            <Setter Property="BorderBrush" Value="#12A498"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>